mixin FooterList(...items)
  each item in items
    li.mb-2
      a.text-800.fw-bold.text-decoration-none(href='#!')
        =item

mixin Footer
  +Section('container-fluid').py-0
    .row.justify-content-center
      .col-5.offset-lg-1
        .p-7
          img.d-inline-block(src=`${CWD}assets/img/gallery/logo.png` width='50' alt='logo')
          span.fw-bold.fs-4.text-primary.ms-2 voyage
          ul.list-unstyled.mt-4
            +FooterList('News','Terms & Conditions','Privacy','About Us','FAQs')

      .col-6.bg-primary-gradient
        .p-7
          p.text-light
            i.fas.fa-phone-alt.me-3
            span.text-light +3930219390
          p.text-light
            i.fas.fa-envelope.me-3
            span.text-light something@gmail.com
          p.text-light
            i.fas.fa-map-marker-alt.me-3
            span.text-light.lh-lg 333, Lorem Street, Albania, Alifornia
              br
              | United States of America
          .mt-6    
            i.fab.fa-facebook.text-light.fs-4.me-3
            i.fab.fa-twitter.text-light.fs-4.me-3
            i.fab.fa-instagram.text-light.fs-4.me-3