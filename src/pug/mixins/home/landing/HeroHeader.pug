mixin HeroHeader
  +Section('container-fluid').py-7
    .row
      .col-md-6.col-lg-4.offset-lg-1.py-7.ps-6
        h1.display-3.text-1000.fw-normal Plan a tour today
        h1.display-3.text-primary.fw-bold Just How You Want
        .pt-7
          nav
            .nav.nav-tabs.voyage-tabs#nav-tab(role='tablist')
              button.nav-link.active#nav-home-tab(data-bs-toggle='tab' data-bs-target='#nav-home' type='button' role='tab' aria-controls='nav-home' aria-selected='true')
                i.fas.fa-map-marker-alt
              button.nav-link#nav-profile-tab(data-bs-toggle='tab' data-bs-target='#nav-profile' type='button' role='tab' aria-controls='nav-profile' aria-selected='false') 
                i.fas.fa-plane
              button.nav-link#nav-contact-tab(data-bs-toggle='tab' data-bs-target='#nav-contact' type='button' role='tab' aria-controls='nav-contact' aria-selected='false') 
                i.fas.fa-hotel
            .tab-content#nav-tabContent
              .tab-pane.fade.show.active#nav-home(role='tabpanel' aria-labelledby='nav-home-tab')
                form.row.g-4.mt-5
                  .col-6
                    .input-group-icon
                      label.form-label.visually-hidden(for='inputAddress1') Address 1
                      input.form-control.input-box.form-voyage-control#inputAddress1(type='text' placeholder='From where')
                      span.nav-link-icon.text-800.fs--1.input-box-icon
                        i.fas.fa-map-marker-alt
                  .col-6
                    .input-group-icon
                      label.form-label.visually-hidden(for='inputAddress2') Address 2
                      input.form-control.input-box.form-voyage-control#inputAddress2(type='text' placeholder='To where')  
                      span.nav-link-icon.text-800.fs--1.input-box-icon
                        i.fas.fa-map-marker-alt 
                  .col-md-6
                    label.form-label.visually-hidden(for='inputState') State
                    input.form-control.input-box.form-voyage-control#inputAddress2(type='date' placeholder='3 Sep,2021')
                
                  .col-md-6
                    label.form-label.visually-hidden(for='inputState') State
                    select#inputState.form-select.form-voyage-select
                      option(selected) 23 Sep,2021
                      option ...
                  .col-md-6
                    .input-group-icon
                      label.form-label.visually-hidden(for='inputState') State
                      select#inputState.form-select.form-voyage-select.input-box
                        option(selected) 2 Adults
                        option 2 Adults 1 children
                        option 2 Adults 2 children
                      span.nav-link-icon.text-800.fs--1.input-box-icon
                          i.fas.fa-user 
                  .col-12.d-grid
                    button.btn.btn-secondary(type='submit') Search Packages
              .tab-pane.fade#nav-profile(role='tabpanel' aria-labelledby='nav-profile-tab') ...
              .tab-pane.fade#nav-contact(role='tabpanel' aria-labelledby='nav-contact-tab') ...
      .col-md-6.col-lg-7.pe-0.text-end
        img.img-fluid.mb-4.h-100(src=`${CWD}assets/img/gallery/hero-section-1.png`  alt='...' width='951')  
    .row
      .col-md-6.px-0
        img.img-fluid.order-md-0.mb-4.h-100(src=`${CWD}assets/img/gallery/hero-section-2.png`  alt='...')    
      .col-md-6.px-0.bg-primary-gradient
        .mx-6.mx-xl-8.my-8
          .align-items-center.d-block.d-flex.mb-5
            img(src=`${CWD}assets/img/icons/locations.png`  alt='...').img-fluid.me-3.me-md-2.me-lg-4
            .flex-1.align-items-center.pt-2
              h5.fw-bold.text-light Travel the best of locations
          .align-items-center.d-block.d-flex.mb-5
            img(src=`${CWD}assets/img/icons/schedule.png`  alt='...').img-fluid.me-3.me-md-2.me-lg-4
            .flex-1.align-items-center.pt-2
              h5.fw-bold.text-light Plan your own schedule
          .align-items-center.d-block.d-flex.mb-5
            img(src=`${CWD}assets/img/icons/save.png`  alt='...').img-fluid.me-3.me-md-2.me-lg-4
            .flex-1.align-items-center.pt-2
              h5.fw-bold.text-light Save upto 50% on everything
                